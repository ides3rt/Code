#!/bin/sh

File="${XDG_CONFIG_HOME:-$HOME/.config}"/X11/Xresources

while read Font; do
	case "$Font" in
		'URxvt*.font:'*)
			break ;;
	esac
done < "$File"

case "$Font" in
	*'15.5'*)
		sed -i '/^URxvt\*\.font:/s/15\.5/30\.5/' "$File" ;;
	*'30.5'*)
		sed -i '/^URxvt\*\.font:/s/30\.5/15\.5/' "$File" ;;
esac

xrdb "$File"
