#!/usr/bin/env bash

File="$HOME/.local/share/dictionary"

[ -f "$File" ] || echo '' > $File

Word=$(sed 's/ - .*//' $File | rofi -dmenu -i -p 'Word')

[ -z "$Word" ] && exit

Exist=$(grep -io "^$Word" $File)

if [ -z "$Exist" ]; then

	Meaning=$(rofi -dmenu -p 'Meaning')
	[ -z "$Meaning" ] && exit

	echo "$Word - $Meaning" >> $File
else
	grep -i "^$Word" $File | rofi -dmenu -i -p 'Matching'
fi
