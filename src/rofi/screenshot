#!/usr/bin/env bash

dmenu() { rofi -dmenu "$@"; }

entry=(
	'Full Screen'
	'Focused Window'
	'Choose Specific Area/Window'
)

select=$(printf '%s\n' "${entry[@]}" | dmenu -i -p 'Screenshot')

[[ -z $select ]] && exit 0

ss() {
	local dest=$HOME/Pictures/$(printf '%(%F_%T)T').png

	if maim "$@" "$dest"; then
		dunstify -u low -i "$dest" 'Captured Successfully...'
	else
		dunstify -u low 'Failed to Capture...'
	fi
}

case $select in
	${entry[0]})
		ss ;;

	${entry[1]})
		ss -i "$(xdotool getactivewindow)" ;;

	${entry[2]})
		ss -s ;;
esac
